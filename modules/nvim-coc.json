{
  "$schema": "https://raw.githubusercontent.com/neoclide/coc.nvim/master/data/schema.json",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"]
    }
  }
}
